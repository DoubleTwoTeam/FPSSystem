
@{
    Layout = null;
}
@model FPS.Models.Authority
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateAuthorityShow</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
          @Html.HiddenFor(m=>m.ID)
         <form action="/Jurisdiction/UpdateAuthorityShow" method="post">
            <table class="table table-border" style="width:50%" align="center">
                <tr>
                    <td colspan="2">添加权限</td>
                </tr>
                <tr>
                    <td>父级节点</td>
                    <td>@Html.DropDownList("Authority", "根节点")</td>
                </tr>
                <tr>
                    <td>新的权限名</td>
                    <td><input id="Text1" type="text" name="newName" /></td>
                </tr>
                <tr>
                    <td>权限地址</td>
                    <td><input id="Text1" type="text" name="newUrl" /></td>
                </tr>
                <tr>
                    <td colspan="2"><input id="Submit1" type="submit" value="添加" /></td>
                </tr>
            </table>

        </form>
        }
    </div>
</body>
</html>