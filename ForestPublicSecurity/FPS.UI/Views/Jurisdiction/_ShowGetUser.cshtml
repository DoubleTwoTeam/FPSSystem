@model List<FPS.Models.UserAndRole>
<div>
    <input id="Button1" style="margin-left:1600px; margin-top:20px; margin-bottom:20px;" type="button" value="添加用户" class="btn btn-primary" onclick="location.href='/Jurisdiction/AddRole'" />
</div>
<table class="tablelist">
    <tr>
        <th>登录名</th>
        <th>密码</th>
        <th>真实姓名</th>
        <th>身份证号</th>
        <th>电话号码</th>
        <th>邮箱</th>
        <th>添加时间</th>
        <th>角色名字</th>
        <th>状态</th>
        <th>操作</th>
    </tr>
    @{
        if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LoginName</td>
                    <td>@item.Password</td>
                    <td>@item.RealName</td>
                    <td>@item.IdCard</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.AddTime.ToString("yyyy年MM月dd日 hh:mm:ss")</td>
                    <td>@item.RoleName</td>
                    <td>@(item.State == 1 ? "启用" : "停用")</td>
                    <td>@Html.ActionLink("修改", "UpdateUserShow", new { id = @item.ID })&nbsp;<a href="javascript:stop(@item.ID.ToString())">停用</a></td>
                </tr>
            }
        }
    }
</table>

