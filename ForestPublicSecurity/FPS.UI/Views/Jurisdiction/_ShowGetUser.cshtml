@model List<FPS.Models.UserAndRole>
<table class="tablelist">
    <tr>
        <th>用户信息</th>
    </tr>
    <tr>
        <th>登录名</th>
        <th>密码</th>
        <th>真实姓名</th>
        <th>身份证号</th>
        <th>电话号码</th>
        <th>邮箱</th>
        <th>添加时间</th>
        <th>角色名字</th>
        <th>状态</th>
        <th>操作</th>
    </tr>
    @{
        if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LoginName</td>
                    <td>@item.Password</td>
                    <td>@item.RealName</td>
                    <td>@item.IdCard</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.AddTime.ToString("yyyy年MM月dd日 hh:mm:ss")</td>
                    <td>@item.RoleName</td>
                    <td>@(item.State == 1 ? "启用" : "停用")</td>
                    <td><a href="">修改</a><a href="">删除</a></td>
                </tr>
            }}
    }
</table>
