@model  List<FPS.Models.InstanceDataModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/police/css/style.css" rel="stylesheet" type="text/css" />
    <title>GetInstanceList</title>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="home.html">首页</a></li>
            <li><a href="#">主动排查</a></li>
            <li><a href="#">多元化排查</a></li>
            <li><a href="#">转递记录管理</a></li>
        </ul>
    </div>

    <div class="rightinfo">

        <table class="tablelist">
            <thead>
                <tr>

                    <th>案件ID<i class="sort"><img src="images/px.gif" /></i></th>
                    <th>报警人</th>
                    <th>报警地点</th>
                    <th>立案人</th>
                    <th>立案类型</th>
                    <th>审批状态</th>
                    <th>立案状态</th>
                    <th>案件时间</th>
                    <th>下载附件</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.ID</td>
                    <td>@item.AlarmReason</td>
                    <td>@item.DetailSplace</td>
                    <td>@item.RealName</td>
                    <td>@item.InstanceTypes</td>
                    <td>@item.ApproveState</td>
                    <td>@item.InstanceTime</td>
                    <td>@item.Space</td>
                    <td>
                        @Html.ActionLink("结案", "PassApprove", new { id = item.ID})
                    </td>
                </tr>
                } 
            </tbody>
        </table>


