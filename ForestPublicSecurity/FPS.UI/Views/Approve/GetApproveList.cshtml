
@{
    Layout = null;
}
@using Webdiyer.WebControls.Mvc;
@model PagedList<FPS.Models.ApproveDataModel>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/police/css/style.css" rel="stylesheet" type="text/css" />
    <title>GetApproveList</title>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="home.html">首页</a></li>
            <li><a href="#">主动排查</a></li>
            <li><a href="#">多元化排查</a></li>
            <li><a href="#">转递记录管理</a></li>
        </ul>
    </div>
    <div class="rightinfo">

        <form class="layui-form" asp-controller="Approve" asp-action="NextPage" data-ajax-success="onSuccess" data-ajax="true" data-ajax-method="POST" 	data-ajax-update="divNews">

        </form>
        <div class="" id="divNews">
            @Html.Partial("_ShowApprove", Model)
         </div>

    </div>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/dist/lib/layer/2.4/layer.js"></script>
    <script src="~/dist/MvcPager/MvcPager.js"></script>
    <script type="text/javascript">
        $('.tablelist tbody tr:odd').addClass('odd');

        /*队长/局长-查看案情*/
        function Get_inStanceById(title,url,id,w,h) {
            layer_show(title, url, w, h);
        }
        /*弹出层*/
        /*
            参数解释：
            title	标题
            url		请求的url
            id		需要操作的数据id
            w		弹出层宽度（缺省调默认值）
            h		弹出层高度（缺省调默认值）
        */
        function layer_show(title, url, w, h) {
            if (title == null || title == '') {
                title = false;
            };
            if (url == null || url == '') {
                url = "404.html";
            };
            if (w == null || w == '') {
                w = 800;
            };
            if (h == null || h == '') {
                h = ($(window).height() - 50);
            };
            layer.open({
                type: 2,
                area: [w + 'px', h + 'px'],
                fix: false, //不固定
                maxmin: true,
                shade: 0.4,
                title: title,
                content: url
            });
        }
        /*关闭弹出框口*/
        function layer_close() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }
    </script>

</body>
</html>
