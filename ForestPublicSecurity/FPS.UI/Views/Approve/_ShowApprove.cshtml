@using Webdiyer.WebControls.Mvc;
@model PagedList<FPS.Models.ApproveDataModel>

<table class="tablelist">
    <thead>
        <tr>

            <th>序号<i class="sort"><img src="images/px.gif" /></i></th>
            <th>业务类型</th>
            <th>申请人</th>
            <th>案件类型</th>
            <th>案件详情</th>
            <th>申请时间</th>
            <th>审批状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.ID</td>
                <td>@item.BusinessName</td>
                <td>@item.InstanceTypes</td>
                <td>
                    <a href="javascript:;" onclick="Get_inStanceById('查看案情','/Approve/GetInstanceById/'+@item.InstanceID,'800','500')">查看案情</a>
                </td>
                <td>@item.InstanceTime</td>
                @{
                    if (item.ApproveState == 1)
                    {
                        <td>审核中</td>
                    }
                    else if (item.ApproveState == 2)
                    {
                        <td>已通过</td>
                    }
                    else
                    {
                        <td>已驳回</td>
                    }
                }

                <td>
                    @Html.ActionLink("通过", "PassApprove", new { id = item.ID, bussiness = item.InstanceTypes, inStanceId = item.InstanceID })&nbsp;&nbsp;
                    @Html.ActionLink("驳回", "NoApprove", new { id = item.ID, inStanceId = item.InstanceID })
                </td>
            </tr>
        }
    </tbody>
</table>

