
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CallPolice</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="app-3">
        <p v-if="seen">现在你看到我了</p>
    </div>
    <script>
        var app3 = new Vue({
            el: '#app-3',
            data: {
                seen: false
            }
        })
    </script>
    <form action="/Center/CallPolice" enctype="multipart/form-data" method="post">
        <table class="table table-hover" style="width:10%;margin:0 auto">
            <tr>
                <td colspan="2" align="center"><h1>报警信息填写</h1></td>
            </tr>
            <tr>
                <td align="right">报警人:</td>
                <td><input id="person" type="text" /></td>
            </tr>
            <tr>
                <td align="right">申报事项:</td>
                <td><input id="title" type="text" /></td>
            </tr>
            <tr>
                <td align="right">案情地点:</td>
                <td>
                    <input id="address" type="text" />
                </td>
            </tr>
            <tr>
                <td align="right">图片信息:</td>
                <td><input id="picture" type="file" name="fileinput" accept=".png,.jpg,.gif"/></td>
            </tr>
            <tr>
                <td align="right">联系电话:</td>
                <td><input id="phone" type="text" /></td>
            </tr>
            <tr>
                <td align="right">身份证:</td>
                <td><input id="id-card" type="text" /></td>
            </tr>
            <tr>
                <td align="right"><input id="Button1" type="submit" value="确认报警" class="btn btn-danger" /></td>
                <td><input id="Reset1" type="reset" value="重新填写" class="btn btn-success" /></td>
            </tr>
        </table>
    </form>
</body>
</html>
